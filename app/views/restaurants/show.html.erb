
<div class="text-center">

  <h3> <%= @restaurant.name %> </h3>
  <p>
  <%= @restaurant.category %> <br>
  <%= @restaurant.address %> <br>
  <%= @restaurant.phone_number %>
  </p>
  <p> <br><br>

  <h4>Reviews</h4>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %>
    <%= stars = "<i class='fa fa-star stars'></i>" * review.rating
    stars.html_safe %>

            </p>
  <% end %>

  <br> <br>

    <%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
    <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
    <%= link_to 'Back', restaurants_path %>
  </p>

</div>
